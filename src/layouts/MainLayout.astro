---
const {title} = Astro.props;
import {SITE_TITLE, SITE_DESCRIPTION} from '../constants'
import Navbar from '../components/ui/Navbar/Navbar.astro';
import Footer from '../components/ui/Footer/Footer.astro'
import '../components/ui/web-component/block-link.js';

interface Props {
  title?: string;
}
---
<!-- Code fence ends -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="desription" content={SITE_DESCRIPTION} />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.js"
      integrity="sha512-BJ/5sR2hFxQTKin/55JQCcMTObShDBAmVjL/3NR/MVcrhyOazJjAgvROem03+HYyGw16SVdSfoWCFGr9syxAKA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <title>{SITE_TITLE} - {title}</title>
  </head>
  <body class="">   
    <Navbar />
    <section class="container mx-auto max-w-screen-xl my-10 px-8">
        <slot />
    </section>  
    <Footer />
    <script src="../components/ui/web-component/block-link.js"></script>
</body>
</html>