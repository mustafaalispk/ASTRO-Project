---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
---
<MainLayout title="404 NOT Found">
    <div class="flex flex-col items-center justify-items-center gap-7">
        <Image src="/images/error-404.png" alt="Error page" width={250} height={250}/>
        <h1 class="text-5xl">Page Not Found</h1>
        <p class="text-2xl">
            Sorry, we couldn't find the page you were looking for.
        </p>
        <a href="/" class="inline-block bg-gray-100 p-2 mb-6 hover:bg-indigo-500 hover:text-white">Go Back Home</a>
    </div> 
</MainLayout>