---
import { formatDate } from "../../../utils";
import type { BlogPost } from "../../../types/common";

const {article} = Astro.props;
interface Props {
    article: BlogPost;
}
---
    
<block-link class="relative inline-block w-full sm:w-auto cursor-pointer rounded-2xl">
    <a href={'/articles/' + article.slug}>
        <img src={article.heroImage.url} alt={article.heroImage.alt} class="w-full h-auto rounded-2xl" />
    </a>
    <div class="absolute inset-0 flex flex-col items-center justify-center bg-black opacity-80 hover:opacity-75 transition duration-300 ease-in-out text-white text-center rounded-2xl">      
        <h2 class="text-2xl mx-0 font-semibold sm:text-3xl sm:mx-2">
            {article.title}
        </h2>
        <p class="text-xl mt-4">{formatDate(new Date(article.pubdate))}</p>
        <!-- Tags with rounded border -->
        <!-- <div class="flex mt-4 justify-center">
        {article.data.tags.map(tag =>  <span
            class="px-2 py-1 border text-white rounded-full text-xs mr-2"
            >{tag}</span>)}
        </div>      -->
    </div>
</block-link>
 